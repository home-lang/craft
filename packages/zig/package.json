{
  "name": "craft-core",
  "version": "0.0.1",
  "private": true,
  "description": "Craft core - Native Zig implementation",
  "scripts": {
    "build": "zig build -Doptimize=ReleaseSafe",
    "build:debug": "zig build",
    "test": "zig build test",
    "run": "zig build run",
    "run:demo": "zig build run-demo",
    "clean": "rm -rf zig-cache zig-out",
    "fmt": "zig fmt src/ build.zig",
    "fmt:check": "zig fmt --check src/ build.zig"
  }
}
