{
  "name": "@craft-native/svelte",
  "version": "0.1.0",
  "description": "Svelte stores for Craft Native - Build native mobile and desktop apps with JavaScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "svelte": "src/index.ts",
  "exports": {
    ".": {
      "svelte": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && bun run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "bun build src/index.ts --outdir dist --target node --format esm --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "craft",
    "craft-native",
    "svelte",
    "stores",
    "native",
    "mobile",
    "desktop",
    "ios",
    "android",
    "electron",
    "tauri"
  ],
  "author": "Craft Native",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stacksjs/craft"
  },
  "peerDependencies": {
    "svelte": ">=3.0.0 || >=4.0.0"
  },
  "devDependencies": {
    "svelte": "^4.2.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@craft-native/types": "workspace:*"
  }
}
