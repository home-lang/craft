{
  "name": "@craft-native/react",
  "version": "0.1.0",
  "description": "React hooks for Craft Native - Build native mobile and desktop apps with JavaScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun build src/index.tsx --outdir dist --target node --format esm && bun run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "bun build src/index.tsx --outdir dist --target node --format esm --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "craft",
    "craft-native",
    "react",
    "hooks",
    "native",
    "mobile",
    "desktop",
    "ios",
    "android",
    "electron",
    "tauri"
  ],
  "author": "Craft Native",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stacksjs/craft"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@craft-native/types": "workspace:*"
  }
}
