{
  "name": "ts-craft",
  "version": "0.0.1",
  "type": "module",
  "description": "Build desktop apps with web languages - TypeScript SDK for Craft",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/craft#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/craft.git",
    "directory": "packages/typescript"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/craft/issues"
  },
  "keywords": [
    "desktop",
    "app",
    "framework",
    "webview",
    "zig",
    "native",
    "cross-platform",
    "electron-alternative",
    "tauri-alternative",
    "gui",
    "typescript",
    "bun"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "bin",
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "bin": {
    "craft": "./bin/cli.ts"
  },
  "scripts": {
    "build": "bun run build:lib && bun run build:types",
    "build:lib": "bun build src/index.ts --outdir dist --format esm --target bun && bun build src/index.ts --outdir dist --format cjs --target node --outfile index.cjs",
    "build:types": "bun run tsc --emitDeclarationOnly --declaration --declarationMap",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "archiver": "^7.0.1"
  },
  "devDependencies": {
    "@stacksjs/clapp": "^0.2.0",
    "@types/archiver": "^6.0.2",
    "better-dx": "^0.1.7"
  }
}
