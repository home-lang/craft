{
  "name": "@stacksjs/zyte",
  "type": "module",
  "version": "0.1.0",
  "description": "Build desktop apps with web languages, powered by Zig",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/zyte#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/zyte.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/zyte/issues"
  },
  "keywords": [
    "desktop",
    "webview",
    "zig",
    "native",
    "cross-platform",
    "tauri",
    "electron-alternative",
    "gui",
    "app-framework",
    "stacks"
  ],
  "files": [
    "LICENSE.md",
    "README.md",
    "build.zig",
    "src",
    "bin"
  ],
  "bin": {
    "zyte": "./bin/zyte"
  },
  "scripts": {
    "postinstall": "bun scripts/postinstall.ts",
    "build": "zig build -Doptimize=ReleaseSafe",
    "build:debug": "zig build",
    "test": "zig build test",
    "run": "zig build run",
    "run:minimal": "zig build run-minimal",
    "clean": "rm -rf zig-cache zig-out",
    "fmt": "zig fmt src/ build.zig",
    "fmt:check": "zig fmt --check src/ build.zig"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  }
}
